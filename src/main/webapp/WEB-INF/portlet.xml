<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:noNamespaceSchemaLocation="http://java.sun.com/xml/ns/portlet/porlet-app_1_0.xsd" version="1.0">
    <portlet>
        <portlet-name>se.consid.ninjaportlet.NinjaPortlet</portlet-name>
        <portlet-class>se.consid.ninjaportlet.NinjaPortlet</portlet-class>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>HELP</portlet-mode>
            <portlet-mode>EDIT</portlet-mode>
            <portlet-mode>CONFIG</portlet-mode>
        </supports>

        <custom-portlet-mode>
            <portlet-mode>CONFIG</portlet-mode>
            <portal-managed>false</portal-managed>
        </custom-portlet-mode>

        <portlet-info>
            <title>NinjaPortlet</title>
            <short-title>Ninjalet</short-title>
            <keywords>Ninja</keywords>
        </portlet-info>
    </portlet>
</portlet-app>